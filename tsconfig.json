{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./"
  },
  "include": ["src"],
  "exclude": ["**/*.test.tsx"]
}
